.ivu-card
  border none
  box-shadow none
  &:hover
    box-shadow none
  &-head
    border none
    padding 0
    font-weight 14px
    font-weight bolder
  &-body
    padding 0
.ivu-menu-vertical .ivu-menu-submenu-title
  padding 13px 19px
  background #263238
  &:hover
    background #1199de
.menu-item .ivu-menu-item
  width 199px
  padding 13px 22px
  background #263238
  color #fff
  font-size 12px
  &:hover
    background #222d32
.ivu-menu-light.ivu-menu-vertical .ivu-menu-item-active:not(.ivu-menu-submenu)
  border-right none
  color #fff
  background #222d32
 .i-form-item__must
  .ivu-form-item-label::before
    content '*'
    font-size 12px
    color red
    margin-right 4px
.ivu-btn-text:focus
  box-shadow 0
.ivu-btn:focus
  box-shadow none
.ivu-page.mini .ivu-page-options-elevator
  font-size 12px
.ivu-page.mini .ivu-page-item
  font-size 12px
.ivu-table-border td:last-child, .ivu-table-border th:last-child
  border-right none
.menu-item .ivu-menu-submenu-title-icon
  font-size 14px
.collapsed-menu .ivu-menu-submenu-title-icon
  font-size 0px
  transition font-size .2s ease
.collapsed-menu .ivu-menu-item
  height 0px
  //width 0px
  overflow hidden
.collapsed-menu .ivu-menu
  display none
  background #222d32
  overflow hidden
.ivu-menu-opened .ivu-menu-submenu-title
  background #1199de
.ivu-modal-confirm-head-title
  font-size 18px!important
.ivu-modal-confirm-footer
  margin-top 20px!important
.ivu-modal
  top 30%
  //transform translateY(-50%)
