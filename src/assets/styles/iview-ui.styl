.ivu-card
  border none
  box-shadow none
  &:hover
    box-shadow none
  &-head
    border none
    padding 0
    font-weight 14px
    font-weight bolder
  &-body
    padding 0
.ivu-menu-vertical .ivu-menu-submenu-title
  padding 13px 24px
  background #263238
  &:hover
    background #1199de
.ivu-menu-vertical .ivu-menu-item
  width 200px
  padding 13px 24px
  background #263238
  color #fff
  font-size 12px
  &:hover
    background #1199de
.ivu-menu-light.ivu-menu-vertical .ivu-menu-item-active:not(.ivu-menu-submenu)
  border-right none
  color #fff
  background #222d32
 .i-form-item__must
  .ivu-form-item-label::before
    content '*'
    font-size 14px
    color red
    margin-right 4px
.ivu-btn-text:focus
  box-shadow 0
.ivu-btn:focus
  box-shadow none
.ivu-page.mini .ivu-page-options-elevator
  font-size 12px
.ivu-page.mini .ivu-page-item
  font-size 12px
.ivu-table-border td:last-child, .ivu-table-border th:last-child
  border-right none
